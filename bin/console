#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"

require "debug"
require "net/http"
require "server_timing"

include ServerTiming

@header = get_header("https://derek.stride.host")
@tree = parse(@header)
@timings = extract(@tree)

puts <<~MOTD
  Welcome to the ServerTiming console!
  Available Methods:
      * get_header(url)
      * parse(string)
      * extract(tree)

  Available ivars:
      * @header => get_header("https://derek.stride.host")
      * @tree => parse(@header)
      * @timings => extract(@tree)

  $ pp @tree.root_node

MOTD

pp @tree.root_node

require "irb"
IRB.start(__FILE__)
